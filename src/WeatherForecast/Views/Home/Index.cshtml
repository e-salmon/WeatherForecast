@model WeatherForecast.Configuration.Objects.WeatherDataProviderSettings
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="forecastData">
        <div class="text-center pos-rel">
            <h1 class="display-4">
                <strong>Belfast</strong>
            </h1>
            <button class="btn btn-outline-dark pos-abs pos-b-r" v-on:click="updateForecast">
                <i class="fa fa-refresh" :class="{'fa-spin': isRefreshing}"></i> Refresh
                <div class="progress">
                    <div class="progress-bar" role="progressbar" :style="{width: progress}"></div>
                </div>
            </button>
        </div>

        <table class="table table-bordered table-striped" v-if="hasData">
            <tbody>
                <tr>
                    <td>
                        <strong>Today ({{ weatherData.today.displayDate }})</strong>
                    </td>
                    <td>{{ weatherData.today.weatherName }}</td>
                    <td><img :src="weatherData.today.weatherImage" class="img-weather" alt="" /></td>
                </tr>
                <tr v-for="item in weatherData.days">
                    <td>
                        <strong>{{ item.displayDate }}</strong>
                    </td>
                    <td>{{ item.weatherName }}</td>
                    <td><img :src="item.weatherImage" class="img-weather" alt="" /></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="text-right">
    Data and images courtesy of <a href="@Model.ServiceUrl" target="MetaWeather"><img src="@Model.LogoUrl" alt="@Model.Name" class="img-footer"> @Model.Name</a>
</div>
